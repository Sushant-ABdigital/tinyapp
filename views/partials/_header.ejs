<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user) {%>
      <div class="ml-auto my-auto d-flex">
        <p class="my-auto text-white">Logged in as: <%= user.email %></p>
        <form action="/logout" method="POST">
          <button type="button submit" class="btn btn-outline-dark my-auto ml-4">Logout</button>
        </form>
      </div>
      <% } else { %>
      <div class="align-items-center ml-auto d-flex">
        <div class="col-auto navbar-nav">
          <a class="nav-item nav-link" style="text-decoration: none" href="/login">Login</a>
        </div>
        <div class="col-auto navbar-nav">
          <a class="nav-item nav-link" style="text-decoration: none" href="/register">Register</a>
        </div>
      </div>
      <% } %>
    </div>
  </nav>
</header>
